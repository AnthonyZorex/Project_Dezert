@model Project_Dezert.Models.Users
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div id="myModal" class="modal">
        @using (Html.BeginForm("LogIn", "Home", FormMethod.Post))
        {
            <div class="modal-content">
            <span class="close" style="margin-left:95%">&times;</span>
                <label> Login</label>
               @* <input id="Login" style="border-radius:10px;border:none;outline:none" type="email" value="" />*@
                @Html.EditorFor(m=>m.Login)
                <br />
                <label>Password</label>
                @Html.EditorFor(m=>m.Password)
         @*       <input id="Password" style="border-radius:10px;border:none;outline:none" type="password" />*@
                <br />
                <input onclick="Log_in" type="submit" class="mx-auto" style="width:250px;height:30px;font-size:20px;border-radius:10px;border:none;outline:none;background:#92dce5;" value="Login" />
            </div>
        }
    </div>
        
    <div id="myModalRegistrations" class="modal">
        @using (Html.BeginForm("Create", "Home", FormMethod.Post))
        {
          <div class="modal-content">
            <span class="closeRegistartion" style="margin-left:95%">&times;</span>
            <label> Login</label>
                @Html.EditorFor(m=> m.Login)
            <br />
            <label>Password</label>
            @Html.PasswordFor(m=>m.Password)
            <br />
            <label>Name</label>
                @Html.EditorFor(m=> m.Name)
            <br />
            <label>Sername</label>
                @Html.EditorFor(m=> m.Sername)
            <br />
                <label>Age</label>
                @Html.EditorFor(m=> m.Age)
                <br />
                <label>PhoneNumber</label>
                @Html.EditorFor(m=> m.PhoneNumber)
                <br />
                <label>Country</label>
                @Html.EditorFor(m=> m.Country)
                <br />
                <label>City</label>
                @Html.EditorFor(m=> m.City)
                <br />
                <input type="submit" class="mx-auto" style="width:250px;height:40px;font-size:24px;border:none;outline:none;background:#92dce5;" value="Create new Account" />
            </div>
        }
    </div>
</div>
<script>
    var modal = document.getElementById("myModal");
    var modalRegistration = document.getElementById("myModalRegistrations");
    var Registration = document.getElementById("Registrace")
    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");


    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];
    var spanCloseRegistration = document.getElementsByClassName("closeRegistartion")[0];
    Registration.onclick = function () {
        modalRegistration.style.display = "block";
    }

    // When the user clicks on the button, open the modal
    btn.onclick = function () {
        modal.style.display = "block";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }
    spanCloseRegistration.onclick = function () {
        modalRegistration.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            //modal.style.display = "none";
            modalRegistration.style.display = "none";
        }
    }
</script>